<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
    android:id="@+id/btnAdicao"
    android:background="@drawable/btn_customizados"
    android:layout_width="fill_parent"
    android:layout_height="70dp"

    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="20dp"
    android:text="@string/btn_adicao" />

    <Button
        android:id="@+id/btnSubtracao"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnAdicao"
        android:background="@drawable/btn_customizados"
        android:layout_marginTop="20dp"
        android:text="@string/btn_subtracao" />

    <Button
        android:id="@+id/btnMultiplicacao"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSubtracao"
        android:background="@drawable/btn_customizados"
        android:layout_marginTop="20dp"
        android:text="@string/btn_multiplicacao" />

    <Button
        android:id="@+id/btnDivisao"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnMultiplicacao"
        android:background="@drawable/btn_customizados"
        android:layout_marginTop="20dp"
        android:text="@string/btn_divisao" />

    <!-- espaÃ§o para banner AD-->


    <!-- fim ad -->

</RelativeLayout>