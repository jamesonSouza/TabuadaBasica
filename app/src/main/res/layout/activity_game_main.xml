<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jmsapplay.tabuadakids.GameMainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:cropToPadding="false"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/loza" />

        <Button
            android:id="@+id/btnVal4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnVal1"
            android:layout_toEndOf="@+id/btnVal1"
            android:text="Button" />

        <Button
            android:id="@+id/btnVal1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="179dp"
            android:layout_marginStart="44dp"
            android:text="Button" />

        <Button
            android:id="@+id/btnVal2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnVal4"
            android:layout_toStartOf="@+id/btnVal4"
            android:text="Button" />

        <Button
            android:id="@+id/btnVal3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnVal4"
            android:layout_below="@+id/btnVal4"
            android:text="Button" />

        <TextView
            android:id="@+id/txtQuestao"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="115dp"
            android:text="TextView" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
